FROM mcr.microsoft.com/dotnet/sdk:8.0

WORKDIR /app

# Install native dependencies needed by SkiaSharp
RUN apt-get update && apt-get install -y \
    libfontconfig1 \
    libfreetype6 \
    libglib2.0-0 \
    libx11-6 \
    libxext6 \
    libxrender1 \
    libxcb1 \
    && rm -rf /var/lib/apt/lists/*

COPY *.csproj .

RUN dotnet restore
RUN dotnet tool restore

EXPOSE 8080